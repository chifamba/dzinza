    "@types/node": "^20.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
