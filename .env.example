# Dzinza Genealogy Platform - Environment Variables
# Copy this to .env and update with your specific values

# Database Configuration
DB_PASSWORD=your_secure_postgres_password_here
MONGO_PASSWORD=your_secure_mongo_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Authentication & Security
JWT_SECRET=your_256_bit_secret_key_here
API_KEY=your_api_key_here
BCRYPT_ROUNDS=12

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=dzinza-storage-bucket

# Monitoring
GRAFANA_PASSWORD=admin_password_here

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
API_RATE_LIMIT=100
MAX_FILE_SIZE=10MB

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=Dzinza
VITE_APP_VERSION=1.0.0
VITE_OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
VITE_OAUTH_FACEBOOK_APP_ID=your_facebook_app_id
VITE_ENABLE_MFA=true
VITE_PASSWORD_MIN_LENGTH=8
VITE_JWT_REFRESH_THRESHOLD=300000
VITE_API_TIMEOUT=10000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password

# External APIs
ANCESTRY_API_KEY=your_ancestry_api_key
FAMILYSEARCH_API_KEY=your_familysearch_api_key

# Security Headers
CORS_ORIGIN=http://localhost:3000,https://dzinza.com
ALLOWED_HOSTS=localhost,dzinza.com,*.dzinza.com

# Development Override
# Uncomment for development environment
# NODE_ENV=development
# LOG_LEVEL=debug
# CORS_ORIGIN=*
