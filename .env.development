# =================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =================================================================
# This file contains development-specific overrides
# All other configuration is inherited from the main .env file

# Application Environment
NODE_ENV=development
PORT=5174

# Development URLs (using localhost instead of container names)
VITE_API_BASE_URL=http://localhost:3001
VITE_AUTH_SERVICE_URL=http://localhost:3002
VITE_GENEALOGY_SERVICE_URL=http://localhost:3004
VITE_SEARCH_SERVICE_URL=http://localhost:3003
VITE_STORAGE_SERVICE_URL=http://localhost:3005

# Development-specific Frontend Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_SOCIAL_LOGIN=false

# Development-specific Feature Flags
ENABLE_DEBUG_ROUTES=true
ENABLE_SEED_DATA=true

# Development-specific Logging
LOG_LEVEL=debug

# Development-specific CORS (more permissive)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# External Services (Development - empty for now)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
