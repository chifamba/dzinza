{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ¨ Debug Frontend (Vite)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ğŸ”§ Debug Backend Service",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend-service/src/server.ts",
      "cwd": "${workspaceFolder}/backend-service",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/backend-service/dist/**/*.js"]
    },
    {
      "name": "ğŸ§¬ Debug Genealogy Service",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/genealogy-service/src/server.ts",
      "cwd": "${workspaceFolder}/genealogy-service",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/genealogy-service/dist/**/*.js"]
    },
    {
      "name": "ğŸ§ª Debug Frontend Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--inspect-brk"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸ§ª Debug Backend Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend-service",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--inspect-brk"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸ”— Debug Full Stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend-service/src/server.ts",
      "cwd": "${workspaceFolder}/backend-service",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "preLaunchTask": "ğŸ—„ï¸ Start Database Services"
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Debug All Services",
      "configurations": [
        "ğŸ”§ Debug Backend Service",
        "ğŸ§¬ Debug Genealogy Service"
      ],
      "stopAll": true
    }
  ]
}
