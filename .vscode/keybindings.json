[
  // Optimized keyboard shortcuts for Dzinza project
  // Press Ctrl+Shift+P (Cmd+Shift+P on Mac) and type "Tasks: Run Task" to access these

  // Development Environment
  {
    "key": "ctrl+shift+d",
    "command": "workbench.action.tasks.runTask",
    "args": "🚀 Start Full Development Environment"
  },
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.tasks.runTask",
    "args": "🛑 Stop Development Environment"
  },

  // Individual Services
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.tasks.runTask",
    "args": "🔧 Start Backend Service Only"
  },
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🎨 Start Frontend Only"
  },

  // Testing
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Run All Tests"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Frontend Tests (Watch)"
  },

  // Building
  {
    "key": "ctrl+shift+alt+b",
    "command": "workbench.action.tasks.runTask",
    "args": "🏗️ Build All Services"
  },

  // Code Quality
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.tasks.runTask",
    "args": "✨ Lint All Code"
  },
  {
    "key": "ctrl+shift+y",
    "command": "workbench.action.tasks.runTask",
    "args": "🔍 Type Check All"
  },

  // Database
  {
    "key": "ctrl+shift+alt+d",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ Start Database Services"
  },
  {
    "key": "ctrl+shift+alt+r",
    "command": "workbench.action.tasks.runTask",
    "args": "🗄️ Reset Database"
  },

  // Git Operations
  {
    "key": "ctrl+shift+g",
    "command": "workbench.action.tasks.runTask",
    "args": "📋 Check Git Status"
  }
]
