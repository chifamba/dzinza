{
  "name": "dzinza-backend-gateway",
  "version": "1.0.0",
  "type": "module",
  "description": "Dzinza Genealogy Platform API Gateway",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "docker:build": "docker build -t dzinza/backend .",
    "docker:run": "docker run -p 3001:3001 dzinza/backend"
  },
  "dependencies": {
    "http-proxy-middleware": "^3.0.5",
    "express": "^4.19.2",
    "dotenv": "^16.5.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/instrumentation-http": "^0.202.0",
    "@opentelemetry/instrumentation-express": "^0.51.0",
    "@opentelemetry/instrumentation-pino": "^0.49.0",
    "@opentelemetry/instrumentation-pg": "^0.54.0",
    "@opentelemetry/instrumentation-mongodb": "^0.55.1",
    "winston": "^3.17.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^13.2.0",
    "express-validator": "^7.0.1",
    "pg": "^8.16.0",
    "mongoose": "^8.15.2",
    "express-prometheus-middleware": "^1.2.0",
    "@opentelemetry/api": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "globals": "^15.0.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
