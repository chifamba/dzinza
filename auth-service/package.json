{
  "name": "dzinza-auth-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Dzinza Authentication Service",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --config ../eslint.config.js --fix",
    "lint:check": "eslint . --config ../eslint.config.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^7.0.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "prom-client": "^13.2.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/instrumentation-http": "^0.202.0",
    "@opentelemetry/instrumentation-express": "^0.51.0",
    "@opentelemetry/instrumentation-pino": "^0.49.0",
    "@opentelemetry/instrumentation-mongodb": "^0.55.1",
    "@opentelemetry/api": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "pg": "^8.16.0",
    "redis": "^5.5.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "globals": "^15.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "nodemon": "^3.1.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
