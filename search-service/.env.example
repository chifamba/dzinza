# Search Service Environment Configuration Example
# Copy this file to .env and update values as needed

# Application Settings
DEBUG=false
PYTHON_ENV=development
PROJECT_NAME="Dzinza Search Service"
PROJECT_VERSION="0.1.0"

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
# ELASTICSEARCH_CLOUD_ID=  # For Elastic Cloud
# ELASTICSEARCH_API_KEY_ID_FILE=  # For API key auth
# ELASTICSEARCH_API_KEY_FILE=
# ELASTICSEARCH_USERNAME_FILE=  # For basic auth
# ELASTICSEARCH_PASSWORD_FILE=

# Elasticsearch Performance Settings
ELASTICSEARCH_REQUEST_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_RETRY_ON_TIMEOUT=true

# Elasticsearch Index Configuration
ELASTICSEARCH_INDEX_PERSONS=dzinza_persons
ELASTICSEARCH_INDEX_FAMILY_TREES=dzinza_family_trees
ELASTICSEARCH_INDEX_EVENTS=dzinza_events

# MongoDB Analytics (Optional)
MONGODB_ANALYTICS_ENABLED=false
MONGODB_URL_ANALYTICS=mongodb://dzinza_user@mongodb:27017/dzinza_search_analytics?authSource=admin
MONGODB_DATABASE_NAME_ANALYTICS=dzinza_search_analytics
# MONGODB_PASSWORD_FILE_ANALYTICS=  # Path to password file

# API Configuration
API_V1_STR=/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://dzinza.local

# JWT Configuration (for token validation)
# JWT_SECRET_FILE=  # Path to JWT secret file
JWT_ALGORITHM=HS256
JWT_AUDIENCE=dzinza-app

# Observability (Optional)
ENABLE_TRACING=false
ENABLE_METRICS=false
OTEL_SERVICE_NAME=search-service
# OTEL_EXPORTER_OTLP_ENDPOINT=

# Shared Configuration
# SHARED_CONFIG_PATH=/etc/shared-config/search.yaml
